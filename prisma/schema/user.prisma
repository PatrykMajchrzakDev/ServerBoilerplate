// User model
model User {
    id                String             @id
    name              String             @unique
    email             String             @unique
    password          String?
    role              Role               @default(USER)
    membership        Membership         @default(REGULAR)
    isEmailVerified   Boolean            @default(false)
    createdAt         DateTime           @default(now())
    updatedAt         DateTime           @updatedAt
    sessions          Session[]
    verificationCodes VerificationCode[]
    account           Account?           @relation("UserToAccount")
    userPreferences   UserPreferences?   @relation("UserToUserPreferences")

    @@index([email])
}

// User account
model Account {
    id                String   @id @default(uuid())
    userId            String   @unique
    provider          String   @default("local")
    providerAccountId String?
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
    twoFactorSecret   String?
    user              User     @relation("UserToAccount", fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

// User preferences
model UserPreferences {
    id                String  @id @default(uuid())
    userId            String  @unique
    enable2FA         Boolean @default(false)
    emailNotification Boolean @default(true)

    user User @relation("UserToUserPreferences", fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

// User session model
model Session {
    id        String   @id @default(uuid())
    userId    String
    userAgent String?
    createdAt DateTime @default(now())
    expiredAt DateTime
    userRole  Role
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

// User's code used for user verification
model VerificationCode {
    id        String   @id @default(uuid())
    userId    String
    code      String   @unique
    type      String
    createdAt DateTime @default(now())
    expiresAt DateTime

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// USER ROLES
enum Role {
    USER
    ADMIN
    MODERATOR
}

enum Membership {
    REGULAR
    SUBSCRIBER
    PRO
}
